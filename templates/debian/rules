#!/usr/bin/make -f

%:
	dh $@ --with python3

override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/wex/usr/bin
	ln -s ../lib/wex/cli/wex debian/wex/usr/bin/wex

override_dh_fixperms:
	dh_fixperms
	# Ensure the CLI entrypoint is executable in the final package
	chmod 0755 debian/wex/usr/lib/wex/cli/wex
	# Ensure directories are traversable
	chmod 0755 debian/wex/usr/lib/wex/cli || true
	chmod 0755 debian/wex/usr/lib/wex || true
