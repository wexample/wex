#!/bin/bash

# If not running in a Docker container
if [ ! -f /.dockerenv ]; then
  # Reload the systemd daemon
  systemctl daemon-reload

  # Enable the service
  systemctl enable wexd

  # Start the service
  systemctl start wexd

  wex core::logo/show

# Running in a container
else
  . /usr/lib/wex/install-local
fi

exit 0
